@model Usuario

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-center">@ViewData["Title"]</h1>

            <div class="card">
                <div class="card-header">
                    <h4>Detalles de Usuario</h4>
                </div>
                <div class="card-body">
                    <h4>Usuario</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Rol)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Rol)
                        </dd>
                    </dl>

                    <div class="mt-4">
                        <a class="btn btn-custom-primary" asp-action="Edit" asp-route-id="@Model?.UsuarioId">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a class="btn btn-custom-secondary" asp-action="Index">
                            <i class="bi bi-arrow-left"></i> Volver a la lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}

<style>
    .container {
        background-color: #f8f9fa; 
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #28a745; 
        color: #fff;
        border-radius: 10px 10px 0 0;
    }

    .card-body {
        background-color: #fff;
    }

    h1 {
        color: #333;
        font-weight: 400;
    }

    h4 {
        color: #555;
        font-weight: 400;
    }

    hr {
        border-top: 1px solid #dee2e6;
    }

    dt {
        font-weight: bold;
    }

    dd {
        margin-bottom: .5rem;
    }

    .btn-custom-primary {
        background-color: #28a745; /* Azul primario de Bootstrap */
        border-color: #28a745;
        color: #fff;
    }

        .btn-custom-primary:hover {
            background-color: #28a745;
            border-color: #28a745;
        }

    .btn-custom-secondary {
        background-color: #6c757d; /* Gris */
        border-color: #6c757d;
        color: #fff;
    }

        .btn-custom-secondary:hover {
            background-color: #545b62;
            border-color: #4e555b;
        }

    .bi {
        margin-right: 5px;
    }
</style>
