@model IEnumerable<Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>

            <div class="d-flex justify-content-end mb-3">
                <a class="btn btn-custom-primary" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Crear Nuevo Usuario
                </a>
            </div>

            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Rol)</th>
                        <th class="text-center">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Rol)</td>
                            <td class="text-center">
                                <a class="btn btn-sm btn-custom-info" asp-action="Edit" asp-route-id="@item.UsuarioId">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a class="btn btn-sm btn-custom-success" asp-action="Details" asp-route-id="@item.UsuarioId">
                                    <i class="bi bi-info-circle"></i> Detalles
                                </a>
                                <a class="btn btn-sm btn-custom-danger" asp-action="Delete" asp-route-id="@item.UsuarioId">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

